{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "ENV": true,
        "L": true,
        "mocha": true,
        "describe": true,
        "it": true,
        "chai": true,
        "process": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    }
}
